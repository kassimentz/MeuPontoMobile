<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.edm.kassimentz.meupontomobile.EnderecoFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLogradouroEndereco"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Logradouro:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtNumeroEndereco"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/txtLogradouroEndereco"
        android:layout_alignParentStart="true"
        android:hint="Número:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtComplementoEndereco"
        android:layout_alignBottom="@+id/txtNumeroEndereco"
        android:layout_toEndOf="@+id/txtNumeroEndereco"
        android:hint="Complemento:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtCepEndereco"
        android:layout_below="@+id/txtNumeroEndereco"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:hint="CEP:" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinCidadeEndereco"
        android:spinnerMode="dialog"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layoutMode="opticalBounds"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinEstadoEndereco"
        android:layout_below="@+id/spinCidadeEndereco"
        android:layout_alignParentStart="true"
        android:spinnerMode="dialog"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinPaisEndereco"
        android:layout_below="@+id/spinEstadoEndereco"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dialog"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cidade:"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/spinCidadeEndereco" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Estado:"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/spinEstadoEndereco" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="País:"
        android:id="@+id/textView3"
        android:layout_alignParentStart="false"
        android:layout_alignBaseline="@+id/spinPaisEndereco" />
</RelativeLayout>